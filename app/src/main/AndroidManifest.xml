        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <!-- OPEN GIVEN FILETYPE WITH APPLICATION--><!--<intent-filter >
                <action android:name="android.intent.action.VIEW" />
