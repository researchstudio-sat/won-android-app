<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/postlist_item"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:weightSum="1">
<TableRow>
    <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="4dp">
        <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/item_conversation_list_image"
                android:src="@drawable/rectangle"
                android:scaleType="centerCrop"/>
        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/type_background"/>
        <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/item_conversation_list_type"
                android:src="@drawable/offer"/>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Need Title Long title this is longer than expected oh my"
                android:id="@+id/item_conversation_list_title"
                android:gravity="left"
                android:singleLine="true"/>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:id="@+id/item_conversation_list_reference">
            <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:id="@+id/arrow_symbol"
                    android:src="@drawable/arrow_symbol"
                    android:layout_centerVertical="true"/>

            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/item_conversation_list_reference_type"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/want"
                    android:layout_toRightOf="@id/arrow_symbol"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Need Title Long title this is longer than expected oh my"
                    android:id="@+id/item_conversation_list_reference_title"
                    android:gravity="left"
                    android:singleLine="true"
                    android:layout_toRightOf="@id/item_conversation_list_reference_type"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/item_conversation_list_message_type"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/message_receive"
                    android:layout_centerVertical="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/item_list_description"
                    android:text="I would like to have this item please"
                    android:id="@+id/item_conversation_list_message_text"
                    android:singleLine="false"
                    android:gravity="left"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentBottom="false"
                    android:maxLines="1"
                    android:minLines="1"
                    android:ellipsize="end"
                    android:enabled="false"
                    android:layout_marginTop="4dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/item_conversation_list_message_type"/>
        </RelativeLayout>
    </LinearLayout>


    <TextView
            android:id="@+id/item_conversation_list_message_counter"
            android:background="@color/conversations"
            android:layout_gravity="center_vertical"
            android:text="5"
            android:padding="3dp"
            android:textColor="@color/menuitem_counter_text"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            />
</TableRow>
</TableLayout>